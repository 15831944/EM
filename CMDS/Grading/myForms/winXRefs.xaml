<Window x:Class="Grading.myForms.winXRefs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        d:DesignHeight="160" d:DesignWidth="320"
        Height="160" Width="320"
        Title="SELECT XREF TO USE FOR CURB">
    <Grid Width =" 314" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*" />
            <ColumnDefinition Width="74*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="cmdOK"
                Content="OK"
                Grid.Column="1"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Height="56" Width="54"
                Margin="10,0,10,40" Click="cmdOK_Click" />
        <ListBox x:Name="lstBox1"
                 SelectionMode="Single"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Height="122" Width="225"
                 Margin="4,4,0,0" SelectionChanged="lstBox1_SelectionChanged">
            <ListBox.BindingGroup>
                <BindingGroup />
            </ListBox.BindingGroup>
        </ListBox>
    </Grid>
</Window>