<Window x:Class="EW.Forms.winGridSpacing" Name="wGridSpacing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Title="Grid Spacing" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" Closing="wGridSpacing_Closing" Width="Auto" Height="Auto">
    <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=ActualWidth}" Margin="0,0,0,0">
        <WrapPanel Margin="0,0,0,0" Orientation="Horizontal">
            <Label Content="POINT GRID SPACING" HorizontalAlignment="Left" Width="140" Height="30" Margin="0,10,10,10"/>
            <ListBox x:Name="lbxBase" HorizontalAlignment="Right" Width ="30" Height="30" Margin="10,10,10,10"/>
            <Button x:Name="cmdOK" Content="OK" Width="60" Height="30" HorizontalAlignment="Right" Margin="20,10,10,10" Click="cmdOK_Click"/>

        </WrapPanel>

    </Grid>
</Window>
